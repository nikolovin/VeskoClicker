<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>

<?import javafx.scene.control.Spinner?>
<GridPane fx:controller="de.nikolovi.misc.clicker.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints minWidth="80"></ColumnConstraints>
        <ColumnConstraints></ColumnConstraints>
    </columnConstraints>

    <padding>
        <Insets left="5" right="5" top="5" bottom="5"></Insets>
    </padding>

    <Label text="Enter coordinates to click." GridPane.columnSpan="2" GridPane.rowIndex="0">
    </Label>
    <Label text="Move the mouse to stop." GridPane.columnSpan="2" GridPane.rowIndex="1">
    </Label>

    <Label text="X:" labelFor="$fieldX" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="RIGHT"></Label>
    <Spinner fx:id="fieldX" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="LEFT" min="0" max="999999" amountToStepBy="1">
    </Spinner>

    <Label text="Y:" labelFor="$fieldY" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="RIGHT"></Label>
    <Spinner fx:id="fieldY" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="LEFT" min="0" max="999999" amountToStepBy="1">
    </Spinner>

    <Label text="Width:" labelFor="$fieldWidth" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="RIGHT"></Label>
    <Spinner fx:id="fieldWidth" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="LEFT" min="10" amountToStepBy="10" max="999999" initialValue="10">
    </Spinner>

    <Label text="Height:" labelFor="$fieldHeight" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.halignment="RIGHT"></Label>
    <Spinner fx:id="fieldHeight" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.halignment="LEFT" min="10" amountToStepBy="10" max="999999" initialValue="10">
    </Spinner>

    <Button text="START" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.halignment="LEFT" onAction="#handleStartButtonAction"></Button>

</GridPane>